.collect_main {
  background-color: #f3f4f6;
}
.collect_main .collect_title {
  padding: 36rpx 0;
}
.collect_main .collect_title .content_tips {
  padding: 15rpx;
  border: 1rpx solid #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.collect_main .collect_title .active {
  border: 1rpx solid currentColor;
}
.collect_main .collect_content {
  background-color: #fff;
}
.collect_main .collect_content .first_tab .goods_item,
.collect_main .collect_content .center_tab .goods_item,
.collect_main .collect_content .tail_tab .goods_item {
  display: flex;
  border-bottom: 2rpx solid #ccc;
}
.collect_main .collect_content .first_tab .goods_item .goods_img,
.collect_main .collect_content .center_tab .goods_item .goods_img,
.collect_main .collect_content .tail_tab .goods_item .goods_img {
  flex: 2;
  text-align: center;
}
.collect_main .collect_content .first_tab .goods_item .goods_img image,
.collect_main .collect_content .center_tab .goods_item .goods_img image,
.collect_main .collect_content .tail_tab .goods_item .goods_img image {
  width: 70%;
}
.collect_main .collect_content .first_tab .goods_item .goods_info,
.collect_main .collect_content .center_tab .goods_item .goods_info,
.collect_main .collect_content .tail_tab .goods_item .goods_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.collect_main .collect_content .first_tab .goods_item .goods_info .goode_info_title,
.collect_main .collect_content .center_tab .goods_item .goods_info .goode_info_title,
.collect_main .collect_content .tail_tab .goods_item .goods_info .goode_info_title {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.collect_main .collect_content .first_tab .goods_item .goods_info .goods_info_price,
.collect_main .collect_content .center_tab .goods_item .goods_info .goods_info_price,
.collect_main .collect_content .tail_tab .goods_item .goods_info .goods_info_price {
  color: var(--themeColor);
  font-size: 32rpx;
}
