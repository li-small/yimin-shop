page {
  background-color: #eee;
}
.fb_mian {
  padding: 20rpx;
  color: #666;
}
.fb_mian .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_mian .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_mian .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_mian .fb_content textarea {
  padding: 10rpx;
}
.fb_mian .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
}
.fb_mian .fb_content .fb_tool button {
  height: 90rpx;
  width: 90rpx;
  font-size: 40rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  margin-top: 20rpx;
  margin-left: 20rpx;
  color: #ccc;
}
.fb_mian .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.fb_mian .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_mian .form_btn_wrap button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
  padding: 0;
  width: 25%;
  height: 90rpx;
  background-color: var(--themeColor);
  color: #fff;
  font-weight: 400;
}
