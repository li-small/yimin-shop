/* 引入字体图标文件 */
@import "./styles/iconfont.wxss";

/* 微信小程序中 不支持通配符* 只能一个个标签加 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 
  主题颜色 可以通过变量来实现
  less 原生的css wxss 都支持  
*/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  font-size: 28rpx;
}

image {
  width: 100%;
}

/* 选中状态 */
.active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}